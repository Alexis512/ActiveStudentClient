<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="30dp"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/numRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Опишите место"
        android:inputType="textMultiLine"
        android:maxLength="50"
        android:textCursorDrawable="@drawable/ic_cursor"
        android:textSize="17sp"
        app:met_maxCharacters="50"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorPrimary"
        app:met_underlineColor="@color/colorPrimaryDark" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Дополнительное описание проблемы ..."
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLength="170"
        android:textCursorDrawable="@drawable/ic_cursor"
        android:textSize="17sp"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Дополнительное описание проблемы"
        app:met_maxCharacters="170"
        app:met_primaryColor="@color/colorPrimary"
        app:met_underlineColor="@color/colorPrimaryDark" />

</LinearLayout>